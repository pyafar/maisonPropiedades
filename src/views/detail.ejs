<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head', {title : 'Detalle - ' }) %>

  <body>
    <%- include('partials/header') %>

    <main>
      <div class="detalle">
        <div class="principal">
          <div class="fotoContenedor">
            <% if (propiedad.images && propiedad.images.length> 0) { %>
            <img
              src="/img/propiedades/<%= propiedad.images[0] %>"
              class="fotos"
              alt="<%= propiedad.nombre %>"
            />
            <% } else { %>
            <img
              src="/img/nofoto.jpg"
              class="fotos"
              alt="<%= propiedad.nombre %>"
            />
            <% } %>
          </div>
          <div class="datos">
            <div>
              <h2><%= propiedad.nombre %></h2>
              <h3><%= propiedad.subtipo %></h3>
              <hr />
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                Tipo de operación:
                <b
                  ><% if (propiedad.operacion==='temporal' ) { %> Alquiler
                  temporal <% } else { %> <%= propiedad.operacion %> <% } %></b
                >
              </li>
              <li class="list-group-item">
                Precio: <b>U$S<%= propiedad.precio %></b>
              </li>
              <li class="list-group-item">
                Disponibilidad:
                <b
                  ><% if (propiedad.disponibilidad==='nodisponible' ) { %> No
                  disponible <% } else if(propiedad.disponibilidad==='reserva' )
                  { %> En reserva <% } else { %> <%= propiedad.disponibilidad %>
                  <% } %></b
                >
              </li>
            </ul>
          </div>
        </div>
        <div>
          <p><%= propiedad.descripcion %></p>
          <ul class="listaDetalles">
            <li class="list-group-item">
              <i class="fa fa-bed"></i>
              <%= propiedad.dormitorios %>
            </li>
            <li class="list-group-item">
              <i class="fa fa-shower"></i>
              <%= propiedad.banio %>
            </li>
            <li class="list-group-item">
              Superficie cubierta: <%= propiedad.superficie %>m²
            </li>
            <li class="list-group-item">
              Superficie total: <%= propiedad.suptotal %>m²
            </li>
          </ul>
        </div>
        <div class="comodidades">
          <h4 class="card-title">Comodidades</h4>
          <ul>
            <li class="list-group-item">
              Cocina: <% if (propiedad.cocina==='semi' ) { %> Semi-integrada <%
              } else { %> <%= propiedad.cocina %> <% } %>
            </li>
            <li class="list-group-item">
              Living: <% if (propiedad.living==='comedor' ) { %> Living comedor
              <% } else { %> <%= propiedad.living %> <% } %>
            </li>
            <li class="list-group-item">
              Calefacción: <% if (propiedad.calefaccion==='aire' ) { %> Aire
              Acondicionado <% } else if (propiedad.calefaccion==='calefaccion'
              ){ %> Calefacción central <% } else
              if(propiedad.calefaccion==='losa' ) { %> Losa radiante <% } else
              if(propiedad.calefaccion==='estufa' ) { %> Estufa a leña <% } %>
            </li>
            <li class="list-group-item">
              Disposición: <%= propiedad.disposicion %>
            </li>
            <li class="list-group-item">
              Orientación: <%= propiedad.orientacion %>
            </li>
            <li class="list-group-item">
              Fiscal: <% if (propiedad.fiscal==='comunes' ) { %> Gastos comunes
              <% } else if (propiedad.calefaccion==='inmobiliaria' ){ %>
              Contribución inmobiliaria <% } else { %> <%= propiedad.fiscal %>
              <% } %>
            </li>
            <% if(propiedad.amueblado){%>
            <li class="list-group-item">Amueblado: Si</li>
            <% } %> <% if(propiedad.suite){%>
            <li class="list-group-item">Suite: <%= propiedad.suite %></li>
            <% } %> <% if(propiedad.piscina){%>
            <li class="list-group-item">Piscina: Si</li>
            <% } %> <% if(propiedad.estacionamiento){%>
            <li class="list-group-item">Estacionamiento: Si</li>
            <% } %> <% if(propiedad.vigilancia){%>
            <li class="list-group-item">Vigilancia: Si</li>
            <% } %>
          </ul>
        </div>
        <div class="galeria">
          <% propiedad.images.forEach((imagen, index) => { %>
              <img
                  src="/img/propiedades/<%= imagen %>"
                  class="fotos"
                  alt="<%= propiedad.nombre %>"
              />
          <% }) %>
      </div>
        <div class="card-body">
          <button onclick="history.back()">
            <i class="fa fa-chevron-circle-left"></i> Volver
          </button>
        </div>
      </div>
    </main>

    <%- include('partials/footer') %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>
    <script>
      $(".galeria").slick({
        dots: true,
        infinite: true,
        speed: 500,
        fade: true,
        cssEase: "linear",
      });
    </script>
  </body>
</html>
